<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".Admin.AdminCategoryActivity">


    <TextView
        android:id="@+id/slogan_Category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:text="Add new books"
        android:textAlignment="center"
        android:background="@color/colorPrimaryDark"
        android:textColor="#172154"
        android:textSize="26sp"
        android:textStyle="bold"
        />


    <LinearLayout
        android:id="@+id/linear1_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="5dp"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/slogan_Category"
        >

        <Button
            android:id="@+id/science_fictionBtn"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:background="@drawable/buttons2"
            android:drawableLeft="@drawable/books1"
            android:text="Science Fiction"
            android:textStyle="bold"
            android:textColor="#ffffff"
            />
        <Button
            android:id="@+id/novelBtn"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:background="@drawable/buttons2"
            android:drawableLeft="@drawable/books1"
            android:text="Novel"
            android:textStyle="bold"
            android:textColor="#ffffff"
        />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear2_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear1_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp">


        <Button
            android:id="@+id/thrillerBtn"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:background="@drawable/buttons2"
            android:drawableLeft="@drawable/books1"
            android:text="Thriller"
            android:textStyle="bold"
            android:textColor="#ffffff"
            />
        <Button
            android:id="@+id/dramaBtn"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:background="@drawable/buttons2"
            android:drawableLeft="@drawable/books1"
            android:text="Drama"
            android:textStyle="bold"
            android:textColor="#ffffff"
            />



    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear3_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear2_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp">


        <Button
            android:id="@+id/comicBtn"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:background="@drawable/buttons2"
            android:drawableLeft="@drawable/books1"
            android:text="Comic"
            android:textStyle="bold"
            android:textColor="#ffffff"
            />
        <Button
            android:id="@+id/educationalBtn"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:background="@drawable/buttons2"
            android:drawableLeft="@drawable/books1"
            android:text="Educational"
            android:textStyle="bold"
            android:textColor="#ffffff"
            />



    </LinearLayout>


    <LinearLayout
    android:id="@+id/linear4_category_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/linear3_category_layout"
    android:orientation="horizontal"
    android:layout_centerHorizontal="true"
    android:gravity="center"
    android:layout_marginTop="10dp">



        <Button
            android:id="@+id/religiousBtn"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:background="@drawable/buttons2"
            android:drawableLeft="@drawable/books1"
            android:text="Religious"
            android:textStyle="bold"
            android:textColor="#ffffff"
            />
        <Button
            android:id="@+id/biopicBtn"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:background="@drawable/buttons2"
            android:drawableLeft="@drawable/books1"
            android:text="Biopic"
            android:textStyle="bold"
            android:textColor="#ffffff"
            />



</LinearLayout>



    <Button
        android:id="@+id/check_orders_btn"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_above="@+id/admin_logout_btn"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:text="Check New Orders"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:background="@drawable/buttons"
        />


    <Button
        android:id="@+id/admin_logout_btn"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/buttons"
        android:text="Logout"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textAllCaps="false"
        />







</RelativeLayout>