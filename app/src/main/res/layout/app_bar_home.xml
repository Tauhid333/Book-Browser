<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>



    <include
        android:id="@+id/include"
        layout="@layout/content_home" />


    <LinearLayout
        android:id="@+id/home_linear_layout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp"
        app:layout_anchor="@+id/include"
        app:layout_anchorGravity="center">

        <ViewFlipper

            android:id="@+id/imageBanner"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#68a0b0">


        </ViewFlipper>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/home_linear_layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_linear_layout1"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:layout_marginTop="260dp"
        >


        <TextView
            android:id="@+id/category_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Browse Category"
            android:textAlignment="center"
            android:background="#7d4131"
            android:textColor="#f2f3f4"
            android:textSize="27sp"
            android:textStyle="bold"

            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/home_linear_layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_linear_layout2"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="310dp">


        <Button
            android:id="@+id/thrillerBtn"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:background="@drawable/buttons3"
            android:drawableLeft="@drawable/books2"
            android:text="Thriller"
            android:textStyle="bold"
            android:textColor="#ffffff"
            />
        <Button
            android:id="@+id/dramaBtn"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:background="@drawable/buttons3"
            android:drawableLeft="@drawable/books2"
            android:text="Drama"
            android:textStyle="bold"
            android:textColor="#ffffff"
            />



    </LinearLayout>



    <LinearLayout
        android:id="@+id/home_linear_layout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_linear_layout3"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="380dp">


        <Button
            android:id="@+id/comicBtn"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:background="@drawable/buttons3"
            android:drawableLeft="@drawable/books2"
            android:text="Comic"
            android:textStyle="bold"
            android:textColor="#ffffff"
            />
        <Button
            android:id="@+id/educationalBtn"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:background="@drawable/buttons3"
            android:drawableLeft="@drawable/books2"
            android:text="Educational"
            android:textStyle="bold"
            android:textColor="#ffffff"
            />



    </LinearLayout>


    <LinearLayout
        android:id="@+id/home_linear_layout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_linear_layout4"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="450dp">



        <Button
            android:id="@+id/religiousBtn"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:background="@drawable/buttons3"
            android:drawableLeft="@drawable/books2"
            android:text="Religious"
            android:textStyle="bold"
            android:textColor="#ffffff"
            />
        <Button
            android:id="@+id/biopicBtn"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:background="@drawable/buttons3"
            android:drawableLeft="@drawable/books2"
            android:text="Biopic"
            android:textStyle="bold"
            android:textColor="#ffffff"
            />




    </LinearLayout>

    <LinearLayout
        android:id="@+id/home_linear_layout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_linear_layout5"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="520dp">

        <Button
            android:id="@+id/science_fictionBtn"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:background="@drawable/buttons3"
            android:drawableLeft="@drawable/books2"
            android:text="Science Fiction"
            android:textStyle="bold"
            android:textColor="#ffffff"
            />
        <Button
            android:id="@+id/novelBtn"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:background="@drawable/buttons3"
            android:drawableLeft="@drawable/books2"
            android:text="Novel"
            android:textStyle="bold"
            android:textColor="#ffffff"
            />


    </LinearLayout>



    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@drawable/nav_cart" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>